<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.IntegrationApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#E6E1E5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/backgroundColorDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundColorDark</item>
        <item name="android:colorBackground">@color/backgroundColorDark</item>
        <!-- Text Input -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="android:autofilledHighlight">@color/primaryLightColorTransparent</item>
        <item name="colorControlNormal">@color/primaryTextColorDark</item>
        <!-- Toolbar -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Sign Up Theme -->
    <style name="NoPreview" parent="Theme.IntegrationApp">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- RV Theme -->
    <style name="RecyclerView" parent="Theme.IntegrationApp">
        <item name="android:background">@color/backgroundColorDark</item>
    </style>
    <!-- Card Theme -->
    <style name="CardView" parent="Theme.IntegrationApp">
        <item name="cardBackgroundColor">@color/backgroundCardColorDark</item>
    </style>
    <!-- Toolbar Theme -->
    <style name="Toolbar" parent="Theme.IntegrationApp">
        <item name="android:background">@color/backgroundColorDark</item>
    </style>
    <!-- Text Input Theme -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout"/>

</resources>