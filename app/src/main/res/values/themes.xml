<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.IntegrationApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorSecondaryContainer">@color/backgroundColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:colorBackground">@color/backgroundRVColor</item>
        <!-- Text Input -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="colorControlNormal">@color/primaryTextColorDark</item>
        <!-- Toolbar -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Sign Up Theme -->
    <style name="NoPreview" parent="Theme.IntegrationApp">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- RV Theme -->
    <style name="RecyclerView" parent="Theme.IntegrationApp">
        <item name="android:background">@color/backgroundRVColor</item>
    </style>
    <!-- Card Theme -->
    <style name="CardView" parent="Theme.IntegrationApp">
        <item name="cardBackgroundColor">@color/backgroundCardColor</item>
    </style>
    <!-- Toolbar Theme -->
    <style name="Toolbar" parent="Theme.IntegrationApp">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
    <!-- Text Input Theme -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout"/>

</resources>